@page
@model Razer_Converter.Pages.MassModel
@{
    ViewData["Title"] = "Mass";
}

<h1>Mass</h1>
<form method="post">
    <div class="form-group">
        <label for="MassConversionMethod">Conversion Type</label>
        <select name="Conversion" class="form-control" id="MassConversionMethod">
            <option>Pounds to Ounces</option>
            <option>Ounces to Pounds</option>
            <option>Grams to Pounds</option>
            <option>Pounds to Grams</option>
            <option>Milligrams to Pounds</option>
            <option>Pounds to Milligrams</option>
        </select>
    </div>
    <div class="form-group">
        <label for="AmoutToBeConverted">Temperature To Be Converted</label>
        <input type="number" name="Amount" class="form-control" id="AmoutToBeConverted" placeholder="0">
    </div>
    <button type="submit" class="btn btn-primary">Convert</button>
</form>
@Model.Results
